{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/public/$1"
      }
    ],
    "env": {
      "TWILIO_ACCOUNT_SID": "@twilio_account_sid",
      "TWILIO_AUTH_TOKEN": "@twilio_auth_token",
      "TWILIO_TWIML_APP_SID": "@twilio_twiml_app_sid",
      "CONNECTIV_TWILIO_NUMBER": "@connectiv_twilio_number",
      "BOOKSNPAYROLL_TWILIO_NUMBER": "@booksnpayroll_twilio_number"
    }
  }